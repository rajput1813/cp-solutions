#include<bits/stdc++.h>
using namespace std;
#define ll long long 
int main(){
	ll t;
	cin>>t;
	while(t--){
		ll n,x=0,sum=0;
		cin>>n;
		ll c[n],l[n];
		for(ll i=0;i<n;i++){
			cin>>c[i];
		}
		for(ll i=0;i<n;i++){
			cin>>l[i];
		}
		x=c[0];
		for(ll i=0;i<n;i++){
			x=min(x,c[i]);
			cout<<x<<"hghg"<<endl;
			sum+=(x*l[i]);
		}
		cout<<sum<<endl;
	}
	
}
